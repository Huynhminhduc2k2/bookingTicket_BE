{
  "compilerOptions": {
    "strict": false,
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "dist"],
  "types": ["jest", "node"]
}
